<mvc:View 
    controllerName="sap.training.view.Detail"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">
	<Page
        id="detailPage" 
        navButtonPress="onNavBack" 
        title="{i18n>detailTitle}" 
        showNavButton="{device>/isPhone}">
		<content>
			<ObjectHeader 
                id="detailHeader" 
				title="{Name}" 
				number="{Price}"
				numberUnit="USD"
                introActive="false" 
                titleActive="false" 
                iconActive="false">
				<firstStatus
                    id="detailStatus">
					<ObjectStatus 
                        id="status" 
						text="{Description}"></ObjectStatus>
				</firstStatus>
			</ObjectHeader>
			<IconTabBar 
                id="idIconTabBar" 
                expanded="{device>/isNoPhone}">
				<items 
    			    id="detailsItems">
					<IconTabFilter 
                        id="iconTabFilter1" 
                        key="selfInfo" 
                        icon="sap-icon://hint">
						<content>
							<f:SimpleForm 
								id="iconTabFilter1form" 
								minWidth="1024" 
								editable="false" 
								layout="ResponsiveGridLayout" 
								labelSpanL="3" 
								labelSpanM="3" 
								emptySpanL="4" 
								emptySpanM="4" 
								columnsL="1">
								<f:content>
									<Label 
										id="label1" 
										text="{i18n>detailRatingLabel}"></Label>
									<RatingIndicator  value="{Rating}" enabled="false" />
									<Label 
										id="label2" 
										text="{i18n>detailReleaseDateLabel}"></Label>
									<Text 
										id="text2"
										text="{path: 'ReleaseDate', type: 'sap.ui.model.type.Date'}"
										maxLines="0"></Text>
									<Label 
										id="label3" 
										text="{i18n>detailDiscontinuedDateLabel}"></Label>
									<Text 
										id="text3"
										text="{path: 'DiscontinuedDate', type: 'sap.ui.model.type.Date'}"
										maxLines="0"></Text>
								</f:content>
							</f:SimpleForm>
						</content>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<footer
            id="detailFooter">
			<Toolbar id="detailToolbar">
				<content>
					<ToolbarSpacer
                        id="toolbarSpacer"></ToolbarSpacer>
					<Button 
                        id="actionButton" 
                        press="openActionSheet" 
                        icon="sap-icon://action"></Button>
				</content>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>